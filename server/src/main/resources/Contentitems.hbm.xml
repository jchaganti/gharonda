<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.sahibidenev.domain.model">
	<class
		name="Contentitems"
		table="contentitems"
	>
		<meta attribute="sync-DAO">true</meta>
		<id
			name="Id"
			type="integer"
			column="id"
		>
			<generator class="increment"/>
		</id>


		<property
			name="Name"
			column="name"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="Data"
			column="data"
			type="string"
			not-null="false"
			length="100"
		/>


	</class>	
</hibernate-mapping>