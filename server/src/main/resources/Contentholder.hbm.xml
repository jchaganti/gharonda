<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.sahibidenev.domain.model">
	<class
		name="Contentholder"
		table="contentholder"
	>
		<meta attribute="sync-DAO">true</meta>
		<id
			name="Id"
			type="integer"
			column="id"
		>
			<generator class="increment"/>
		</id>
		<set name="contentitems" lazy="false">
            <key column="pid"/>
            <one-to-many class="Contentitems"/>
        </set>

		<property
			name="Created"
			column="created"
			type="java.lang.Long"
			not-null="false"
			length="19"
		/>		
		<property
			name="TimeStamp"
			column="timeStamp"
			type="java.lang.Long"
			not-null="false"
			length="19"
		/>
		<property
			name="Name"
			column="name"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="WipState"
			column="wipState"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="OtherSideId"
			column="otherSideId"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="ReservedInt"
			column="reservedInt"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="ReservedStr"
			column="reservedStr"
			type="string"
			not-null="false"
			length="1024"
		/>
		<many-to-one name="User"
			class="Users"
			column="userId"
		/>
		
		<joined-subclass
			name="Properties"
			table="properties">
			<key column="id"/>
  		<property
			name="Lat"
			column="lat"
			type="java.lang.Double"
			not-null="false"
			length="22"
		/>
		<property
			name="Lng"
			column="lng"
			type="java.lang.Double"
			not-null="false"
			length="22"
		/>
		<property
			name="PType"
			column="pType"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="PMode"
			column="pMode"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="AddrNum"
			column="addrNum"
			type="string"
			not-null="false"
			length="10"
		/>
		<property
			name="StreetName"
			column="streetName"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="Suburb"
			column="suburb"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="City"
			column="city"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="PostCode"
			column="postCode"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="State"
			column="state"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="Title"
			column="title"
			type="string"
			not-null="false"
			length="1024"
		/>
		<property
			name="BedRooms"
			column="bedRooms"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Heat"
			column="heat"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="BathRooms"
			column="bathRooms"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="View"
			column="view"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="BuildDate"
			column="buildDate"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="HomeLoan"
			column="homeLoan"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Floor"
			column="floor"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Description"
			column="description"
			type="string"
			not-null="false"
			length="1024"
		/>
		<property
			name="Price"
			column="price"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Sqrft"
			column="sqrft"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Currency"
			column="currency"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Isactive"
			column="isactive"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="PlanType"
			column="planType"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="IsFeatured"
			column="isFeatured"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="IsBargain"
			column="isBargain"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="IsYardSign"
			column="isYardSign"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="IsEBook"
			column="isEBook"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Amenity1"
			column="amenity1"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Amenity2"
			column="amenity2"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Amenity3"
			column="amenity3"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="Amenity4"
			column="amenity4"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="ReservedInt"
			column="reservedInt"
			type="integer"
			not-null="false"
			length="10"
		/>
		<property
			name="ReservedStr"
			column="reservedStr"
			type="string"
			not-null="false"
			length="1024"
		/>

		</joined-subclass>
	</class>	
</hibernate-mapping>